<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7559347E"
    android:foregroundGravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/principallog"
        android:layout_width="416dp"
        android:layout_height="263dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/principallog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017"
        app:srcCompat="@drawable/principal"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/iniciose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alfa_slab_one"
        android:foregroundGravity="center"
        android:gravity="center|clip_vertical"
        android:text="@string/iniciar_sesion"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/edtcorreoelectronico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/principallog"
        app:layout_constraintVertical_bias="0.396" />

    <EditText
        android:id="@+id/edtcorreoelectronico"
        style="w"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:gravity="start"
        android:hint="@string/correo_electronico"
        android:importantForAutofill="no"
        android:inputType="textWebEmailAddress|textPersonName"
        android:text="@string/correo_electronico"
        android:textColorHint="#88FFFFFF"
        android:textStyle="normal|italic"
        app:layout_constraintBottom_toTopOf="@+id/edtcontraseña"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/principallog"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/edtcontraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:gravity="start"
        android:hint="@string/contraseña"
        android:importantForAutofill="no"
        android:inputType="none"
        android:text="@string/contraseña"
        android:textStyle="normal|italic"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtcorreoelectronico"
        tools:ignore="TouchTargetSizeCheck" />


    <Button
        android:id="@+id/btningresar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        android:backgroundTint="#7C72D818"
        android:text="@string/Ingresar"
        android:textColor="#22201F"
        android:textSize="16sp"
        android:textStyle="normal|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtcontraseña"
        app:layout_constraintVertical_bias="0.131"
        tools:ignore="TouchTargetSizeCheck,DuplicateClickableBoundsCheck" />

    <Button
        android:id="@+id/bntregistrarse"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        android:backgroundTint="#7C72D818"
        android:onClick="Registrar"
        android:text="@string/registrarse"
        android:textColor="#22201F"
        android:textSize="16sp"
        android:textStyle="normal|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtcontraseña"
        app:layout_constraintVertical_bias="0.409"
        tools:ignore="OnClick,TouchTargetSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>